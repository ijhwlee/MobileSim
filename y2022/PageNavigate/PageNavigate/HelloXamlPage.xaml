<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageNavigate.HelloXamlPage"
             Title="HelloXamlPage">
    <VerticalStackLayout>
    <Label 
            Text="Welcome to .NET MAUI!"
            x:Name="LabelHello"
            VerticalOptions="End"
            HorizontalTextAlignment="Center"
            FontSize="28"
            Rotation="-20"
            FontAttributes="Bold"
            TextColor="Green"/>
    <Button Text="Click Me!"
            x:Name="ToggleRotate"
            HorizontalOptions="Center"
            Clicked="ToggleRotate_Clicked" />
    </VerticalStackLayout>
</ContentPage>