             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccelerometerLPF.MainPage">

    <Grid>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Text="ax = 0.000, ay = 0.000, az = 0.000" x:Name="accValue" />
